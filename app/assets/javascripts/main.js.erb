
Todo = angular.module("Todo", ['ngRoute']);

Todo.config(['$routeProvider', function($routeProvider){
  // Route for '/list'
  $routeProvider
    // .when('/list/new', { templateUrl: '../assets/mainCreateList.html', controller: 'CreateListCtrl' } )
    .when('/list/:listId', { templateUrl: "<%= asset_url('/assets/listView.html')%>", controller: 'ListCtrl' } );

  //  Default
  $routeProvider.otherwise({ templateUrl: "<%= asset_url('/assets/listIndex')%>", controller: 'ListIndexCtrl' } );

}]);
